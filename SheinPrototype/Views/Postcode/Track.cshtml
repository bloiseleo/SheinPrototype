            </div>
            <div>
                <div style="color: black; font-family: inherit; font-size: 13px;font-weight: bold;">
                    @status.Day
                </div>
                <div style="margin-top: 10px;">
                    <span>@status.Message</span>
                </div>
            </div>
        </div>
    }
</section>