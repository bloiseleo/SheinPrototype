@{
    Layout = "_Layout";
}
@model SheinPrototype.TrackViewModel;

<section style="padding: 14px; display: flex; flex-direction: column; gap: 20px;">
    <div style="display: @(Model.IsFirstTime ? "block": "none");">
        <h1 style="color: black; font-size: 1.6rem;text-align: center">Parabéns pela sua aquisição!</h1>
        <p style="text-align: center;">As suas roupas estão a caminho! Fique atento ao rastreamento abaixo para não perder nenhuma atualização.</p>    
    </div>
    <h1 style="font-size: 20px; color: black; font-weight: bold; border-bottom: 1px solid #666666;">@Model.Token</h1>
    @foreach (var status in Model.Status)
    {
        <div style="display: flex; gap: 20px;">
            <div>
